function machine {
  if [ "0" != "`grep docker /proc/self/cgroup | wc -l`" ]; then 
    echo "docker" 
  else 
    echo $(hostname)
  fi
}
function shortpath {
  pwd | rev | sed -r -e "s./.@." -e "s,/.+,/...," -e "s.@./." | rev
}
function git_branch {
  git branch 2>/dev/null | sed -e "/^[^*]/d" -e "s/* /[/" -e "s/$/]/" 
}
PROMPT_COMMAND="PS1='(\$?)\[\033[31m\]\u@\[\033[36m\]\$(machine):\[\033[92m\]\$(shortpath)\[\033[93m\]\$(git_branch)\[\033[0m\]>'"
